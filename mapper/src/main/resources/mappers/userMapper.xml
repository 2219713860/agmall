<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--mapper文件相当于DAO接口的实现类，namespace属性的值就相当于StudentDAO的全限定名（包名加类名）-->
<mapper namespace="com.zhangxu.agmall.dao.UserDao">
    <resultMap id="User" type="com.zhangxu.agmall.entity.User">
        <id column="user_id" property="userId"></id>
        <result column="username" property="username"></result>
        <result column="password" property="password"></result>
        <result column="nickname" property="nickname"></result>
        <result column="realname" property="realname"></result>
        <result column="user_img" property="userImg"></result>
        <result column="user_mobile" property="userMobile"></result>
        <result column="user_email" property="userEmail"></result>
        <result column="user_sex" property="userSex"></result>
        <result column="user_birth" property="userBirth"></result>
        <result column="user_regtime" property="userRegtime"></result>
        <result column="user_modtime" property="userModtime"></result>
    </resultMap>
    <insert id="insertUser" useGeneratedKeys="true" keyProperty="userId">
        insert into users(username, password,user_img , user_regtime,user_modtime)
        value(#{username},#{password},#{userImg},#{userRegtime},#{userModtime})
    </insert>
    <select id="queryUserByName" resultMap="User">
        select user_id,
               user_img,
               user_id,
               username,
               password,
               nickname,
               realname,
               user_img,
               user_mobile,
               user_email,
               user_sex,
               user_birth,
               user_regtime,
               user_modtime
        from users
        where username = #{username}
    </select>
</mapper>